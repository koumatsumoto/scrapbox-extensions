{
  "name": "scrapbox-extensions",
  "version": "0.0.1",
  "main": "dist/main.js",
  "repository": "git@github.com:kouMatsumoto/scrapbox-extensions.git",
  "author": "kou.matsumoto <matsumoto@bitcoinbank.co.jp>",
  "license": "MIT",
  "scripts": {
    "build:dev": "concurrently 'yarn :build:dev:scss' 'yarn :build:dev:ts'",
    "build:prod": "yarn build:prod:scss && yarn build:prod:ts",
    "build:prod:scss": "node-sass src/styles/main.scss dist/style.css && uglifycss dist/style.css --output dist/style.min.css",
    "build:km-public:prod:scss": "node-sass src/styles/km-public.scss dist/km-public.css && uglifycss dist/km-public.css --output dist/km-public.min.css",
    "build:prod:ts": "webpack --config webpack.config.prod.js",
    "check:build:tsc": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.json --noEmit",
    "check:diff": "git diff --exit-code --name-only ./src",
    "ci:check": "yarn ci:check:build && yarn ci:check:test && yarn ci:check:lint",
    "ci:check:build": "yarn check:build:tsc && yarn build:prod:ts && yarn build:prod:scss",
    "ci:check:lint": "yarn format && yarn check:diff",
    "ci:check:test": "yarn test:unit --ci --silent --detectOpenHandles --forceExit --collectCoverage",
    "ci:deploy": "yarn deploy",
    "deploy": "yarn build:prod && yarn ts-node src/deploy/main.ts",
    "format": "yarn lint:scss --fix && yarn lint:ts --fix && prettier --config .prettierrc --write '{deploy,src,.circleci,sandbox}/**/*.{ts,js,scss,html,md,yml}' ./*.{js,json}",
    "lint:scss": "stylelint 'src/styles/**/*.scss'",
    "lint:ts": "eslint 'src/**/*.ts'",
    "jest": "node --max_old_space_size=4096 ./node_modules/.bin/jest",
    "start:dev": "yarn build:dev && concurrently 'yarn :build:dev:scss:watch' 'yarn :build:dev:ts:watch' 'browser-sync start --config bs-config.js'",
    "test:unit": "yarn jest -c jest.config.js",
    "ts-node": "node --max-old-space-size=8000 node_modules/.bin/ts-node --project tsconfig.json",
    ":build:dev:scss": "node-sass src/styles/main.scss dist/style.css",
    ":build:dev:scss:watch": "yarn :build:dev:scss && yarn :build:dev:scss -w",
    ":build:dev:ts": "webpack --config webpack.config.dev.js",
    ":build:dev:ts:watch": "yarn :build:dev:ts -w"
  },
  "engines": {
    "node": ">= 13.0.0",
    "yarn": ">=1.19.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@types/puppeteer": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.0.2",
    "date-fns": "^2.8.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "html-loader": "^0.5.5",
    "html-loader-jest": "^0.2.1",
    "jest": "^24.9.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "puppeteer": "^2.0.0",
    "rxjs": "7.0.0-alpha.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0",
    "svg-inline-loader": "^0.8.0",
    "terser-webpack-plugin": "^2.3.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "typescript": "^3.7.3",
    "uglifycss": "^0.0.29",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
