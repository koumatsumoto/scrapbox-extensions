{
  "name": "scrapbox-extensions",
  "version": "0.0.1",
  "main": "dist/index.js",
  "repository": "git@github.com:kouMatsumoto/scrapbox-extensions.git",
  "author": "kou.matsumoto <matsumoto@bitcoinbank.co.jp>",
  "license": "MIT",
  "scripts": {
    "build": "yarn tsc:app --declaration false",
    "check:diff": "git diff --exit-code --name-only ./src",
    "ci:build": "yarn tsc:app --noEmit && yarn run tsc:spec --noEmit",
    "ci:lint": "yarn format && yarn check:diff",
    "ci:test": "yarn test:unit --ci --silent --detectOpenHandles --forceExit --collectCoverage",
    "format": "prettier --config .prettierrc --write 'src/**/*.{ts,js,md}'",
    "jest": "node --max_old_space_size=4096 ./node_modules/.bin/jest",
    "test:unit": "yarn jest -c jest.config.js",
    "tsc:app": "tsc -p tsconfig.app.json",
    "tsc:spec": "tsc -p tsconfig.spec.json"
  },
  "engines": {
    "node": ">= 13.0.0",
    "yarn": ">=1.19.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  }
}
